---
title: CodeCollections
---

<div class="card-grid">
{% for codecollection in data["codecollections"] %}
    <div class="card">
      <a href="/codecollection/{{ codecollection.slug }}" class="card-link">
        <img class="card-icon" src="https://storage.googleapis.com/runwhen-nonprod-shared-images/icons/code_blocks.svg" alt="Icon" />
        <div>
          <h3 class="card-title">{{ codecollection.name }}</h3>
          <p class="card-description">
            {{ codecollection.description }} <br><br>
            Owner: {{ codecollection.owner }} <br>
            Contact Email: {{ codecollection.owner_email }} <br>
            Contributors: {{ all_codecollection_stats[codecollection.slug].total_contributors }}<br>
            Total CodeBundles: {{ all_codecollection_stats[codecollection.slug].total_codebundles }}<br>
            Total Tasks: {{ all_codecollection_stats[codecollection.slug].total_tasks }}<br>
          </p>
          <div class="md-header__button md-icon">
          <a class="github-button" href="{{ codecollection.git_url }}" data-icon="octicon-star" data-size="large" data-show-count="true" aria-label="Star runwhen-contrib/runwhen-local on GitHub">Star</a>
          </div>
        </div>
      </a>
    </div>
{% endfor %}
</div>

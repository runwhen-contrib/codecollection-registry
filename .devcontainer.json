{
    "name": "registry-devimage",
    "shutdownAction": "none",
    "build": {
        "dockerfile": ".devcontainer.Dockerfile",
        "context": "."
    },
    "overrideCommand": true, // Allows overriding the CMD in the Dockerfile
    "runArgs": [
        "-p",
        "8081:8081"
    ],
    "forwardPorts": [8081],
    "workspaceFolder": "/app",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "robocorp.robotframework-lsp",
                "ms-python.pylint",
                "ms-python.black-formatter",
                "ms-python.python",
                "njpwerner.autodocstring"
            ],
            "settings": {
                "python.languageServer": "Jedi",
                "python.linting.enabled": true,
                "editor.formatOnSave": true,
                "editor.lineNumbers": "on",
                "python.formatting.provider": "black"
            }
        }
    },
    "remoteUser": "runwhen",
    "postStartCommand": "mkdocs serve -a 0.0.0.0:8081 || bash" // Optionally start MkDocs or drop into a shell
}
